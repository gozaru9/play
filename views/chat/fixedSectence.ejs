<!doctype html>
<html>
    <head>
        <%- include ../head.ejs %>
        <link href="/font-awesome/css/font-awesome.css" rel="stylesheet">
        <link href="/stylesheets/sticky-footer-navbar.css" rel="stylesheet">
        <link href="/stylesheets/chatapp.css" rel="stylesheet">
    </head>
    <body>
    <div id="wrap">
        <%- include ../header.ejs %>
        <div class="chat-container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="page-header">定型文作成</h2>
                    <div class="panel panel-info">
                        <div class="panel-body">
                            <form method="post" action="/chat/fixedSectence/save" class="form-horizontal">
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <div class="btn-group" data-toggle="buttons">
                                            <label class="btn btn-default">
                                                <input name="isOpen" type="radio" value=true> 全体用
                                            </label>
                                            <label class="btn btn-default">
                                                <input name="isOpen" type="radio" value=false> 個人用
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="title">タイトル</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="title" name="title" placeholder="プルダウンの項目になります">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label" for="contents">定型文</label>
                                    <div class="col-sm-10">
                                        <textarea id="contents" class="form-control" name="contents" rows="3" placeholder=""></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-default">登録する</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <h2 class="page-header">my fixed sentence</h2>

                    <h2 class="page-header">open sentence</h2>

                </div>
            </div>
        </div>
    </div>
    </body>
</html>
    